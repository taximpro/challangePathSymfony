{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <a href="{{ path('create_order')  }}"><button>New Order</button></a>
    <a href="{{ path('logout')  }}"><button>Logout</button></a>
<div class="example-wrapper">

    <table>
        <tr>
            <th>OrderID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Address</th>
            <th>Shipping Date</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
        <tbody>
        {%  for order in orders %}
        <tr>
            <td>{{ order.orderCode }}</td>
            <td>{{ order.product.ProductName }}</td>
            <td>{{ order.quantity }}</td>
            <td>{{ order.address }}</td>
            <td>{{ order.shippingDate }}</td>
            <td><a href="{{ path('update_order',{id: order.id}) }}"><button>{% if(status=='Admin') %} Details/ {% endif %} Update</button></a></td>
            <td><a href="{{ path('delete_order',{id: order.id}) }}"><button style="height: 36px">Delete   <br></button></a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


</div>
{% endblock %}
